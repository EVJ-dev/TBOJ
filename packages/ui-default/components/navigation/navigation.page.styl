.nav--placeholder
  height: $nav-item-height

.nav
  position: relative
  display: flex
  flex-direction: row
  left: 0
  top: 0
  padding-left: 3.7em
  width: 100%
  height: 65px
  max-height: 65px
  font-size: rem($font-size-secondary)
  z-index: 500
  align-items: center
  background: rgba(#FFF, 0.98)

  .nav__container
    max-width: 1200px
    width: 1200px
    display: flex
    margin: auto

  .nav__header
    display: flex
    flex: 1
    max-height: 100%
    margin-top: 5px
    margin-bottom: 5px
  
  .nav__header > a > img
    height: 55px
  
  .nav__userbar
    position: relative
    align-items: center
    display: flex
    margin-right: 15px

  .nav .dropdown-target.menu
    display: block
    background: none
    border: 0
    box-shadow: none
    list-style-type: none

    .menu__link
      padding-left: rem(35px)

    .menu__seperator
      display: none

  li
    list-style-type: none

.vernav
  list-style-type: none
  margin: 0
  padding: 0
  width: 3.7em
  height: 100%
  position: fixed
  background-color: rgb(52, 73, 94)
  overflow: auto
  z-index: 999

  .vernav__logo
    background-color: rgb(52, 152, 219)
    height: 65px
    padding-left: .8em
    padding-right: .8em
    vertical-align: center
    align-items: center
    display: flex
    // padding-bottom: 2em
    text-align: center
  
  .vernav__item
    display: block
    margin-top: 1em
    vertical-align: center
    height: 3.5em
    text-align: center
    color: #dddddd
    // padding: 0.5em
    font-size: .8em
    text-decoration: none

    .vernav__item__logo
      display: block
      padding-top: .2em
      padding-left: 1.2em
      padding-right: 1.2em
      padding-bottom: .2em
    
    .vernav__item__logo > svg
      max-height: 20px
      width: auto
